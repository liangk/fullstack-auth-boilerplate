# Server
PORT=4000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DB_NAME?schema=public

# Auth
JWT_ACCESS_SECRET=replace_me_with_a_strong_access_secret
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_SECRET=replace_me_with_a_strong_refresh_secret
JWT_REFRESH_EXPIRES=7d
JWT_EMAIL_SECRET=replace_me_with_a_strong_email_secret
JWT_EMAIL_EXPIRES=24h
ACCESS_TOKEN_COOKIE=access_token
REFRESH_TOKEN_COOKIE=refresh_token

# Rate limiting
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MINUTES=1
AUTH_RATE_LIMIT_MAX=5

# Email
# For local development, install and run MailDev:
# npm install -g maildev
# maildev
# Then visit http://localhost:1080 to view emails
# Leave SMTP_HOST empty to use MailDev automatically in development
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
