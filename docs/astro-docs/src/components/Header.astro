---
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a class="logo" href="https://stackinsight.app"><img src="/stackinsight_logo_dark.png" alt="StackInsight Logo" /></a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/docs">Docs</HeaderLink>
		</div>
	</nav>
</header>
<style lang="scss">
	header { background-color: #f8f9fa; box-shadow: 0 2px 8px rgba(var(--black), 5%);
		nav { display: flex; justify-content: space-between; align-items: center; max-width: 1000px;
			padding: 20px; margin: 0 auto; }
		.logo { margin: 0; cursor: pointer; 
			img { width: 150px; height: auto; display: block; }
		}
		a { margin-right: 1rem; text-decoration: none; color: #333; cursor: pointer;
			&:hover { text-decoration: underline; }
		}
		a.active { border-bottom-color: var(--accent);	}
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
